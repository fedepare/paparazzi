<!DOCTYPE module SYSTEM "module.dtd">

<module name="event_optic_flow">
  <doc>
    <description>Event based optic flow using DVS camera</description>
  </doc>

  <settings>
    <dl_settings>
      <dl_settings NAME="Event-based Optic Flow">
        
        <dl_setting var="enableDerotation" min="0" step="1" max="1" shortname="derotation" values="NO|YES" param="EOF_ENABLE_DEROTATION"/>
        <dl_setting var="statsFilterTimeConstant" min="0.01" step="0.01" max="0.2" shortname="filter_constant" param="EOF_FILTER_TIME_CONSTANT"/>
	<dl_setting var="flowMaxSpeedDiff" min="10.0" step="2.0" max="200.0" shortname="filter_constant" param="EOF_FLOW_MAX_SPEED_DIFF"/>
	<dl_setting var="minEventRate" min="50" step="50" max="1000" shortname="event_rate" param="EOF_MIN_EVENT_RATE"/>
	<dl_setting var="minPosVariance" min="50" step="50" max="1000" shortname="position_variance" param="EOF_MIN_POSITION_VARIANCE"/>
      </dl_settings>
    </dl_settings>
  </settings>
  <header>
    <file name="event_optic_flow.h"/>
  </header>
  <init fun="event_optic_flow_init()"/>
  <periodic fun="event_optic_flow_periodic()" start="event_optic_flow_start()" stop="event_optic_flow_stop()" freq="100" autorun="TRUE"/>
  <makefile>
    <file name="event_optic_flow.c"/>
    <file name="flow_field_estimation.c"/>
  </makefile>
</module>

